# Telegram Bot Token
# Получите токен у @BotFather в Telegram
BOT_TOKEN=your_bot_token_here

# Channel IDs (через запятую)
# ID каналов, в которые бот будет отправлять сообщения
# Формат: -1001234567890,-1009876543210
CHANNEL_IDS=-1001234567890,-1009876543210

# Timezone
# Часовой пояс для расписания отправок
TIMEZONE=Europe/Moscow

# Database path
# Путь к файлу базы данных SQLite
DATABASE_PATH=bot_data.db

# Admin password for manual post sending
# Пароль для доступа к функции ручной отправки постов
# ВАЖНО: 
# 1. Используйте сложный пароль (минимум 12 символов)
# 2. НЕ храните этот файл с реальным паролем в git
# 3. Пароль чувствителен к регистру
# 4. Пример сложного пароля: MySecureP@ssw0rd2026!
ADMIN_PASSWORD=your_secure_password_here
