# Telegram Bot Token (получить от @BotFather)
BOT_TOKEN=your_bot_token_here

# ID каналов для отправки (через запятую, с минусом для каналов)
# Пример: CHANNEL_IDS=-1001234567890,-1009876543210
CHANNEL_IDS=-1001234567890

# Часовой пояс (по умолчанию Europe/Moscow)
TIMEZONE=Europe/Moscow

# База данных (по умолчанию bot_data.db)
DATABASE_PATH=bot_data.db
